[alias]
    s = status
    co = checkout
    br = branch
    ci = commit
    cane = commit --amend --no-edit
    lo = log --oneline -n 10
    a = add .
    cm = commit -m
    publish = !git push --set-upstream origin `git branch --show-current`
    mm = !git fetch origin main:main && git merge main
[user]
    name = "Dylan Ling"
    # Default email - override in .gitconfig-work for work repos
    email = dylan.t.ling@gmail.com
    signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIL+MwHM0YDmD0V3PJ8Q2PTq3OZdsg2o9rl1XNfCSzKZA

# Include work config when in work directories
[includeIf "gitdir:~/dev/chime/"]
    path = ~/.gitconfig-work

[core]
    excludesfile = ~/.gitignore_global
[pager]
    branch = false
    lo = false
[url "git@github.com:"]
    insteadOf = https://github.com/
[commit]
    gpgsign = true
[gpg]
    format = ssh
[gpg "ssh"]
    program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[init]
    defaultBranch = main
[push]
    default = current
